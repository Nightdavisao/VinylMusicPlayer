<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.GrantAppPermissionsActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:text="@string/welcome_to_vinyl_music_player"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/permission_all_files_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:text="@string/perm_title_all_files"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/grant_all_files_permission_btn"
        android:layout_width="179dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="@string/action_grant_permission"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/legacy_storage_access_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/perm_title_storage_access"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/grant_all_files_permission_btn"
        app:layout_constraintTop_toBottomOf="@+id/grant_all_files_permission_btn" />

    <Button
        android:id="@+id/grant_legacy_storage_access_btn"
        android:layout_width="181dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:text="@string/action_grant_permission"
        app:layout_constraintStart_toStartOf="@+id/legacy_storage_access_text"
        app:layout_constraintTop_toBottomOf="@+id/legacy_storage_access_text" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/perm_description_all_files"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/permission_all_files_text" />
</androidx.constraintlayout.widget.ConstraintLayout>